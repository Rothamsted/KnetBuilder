<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>modules</artifactId>
		<groupId>net.sourceforge.ondex</groupId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>

	<groupId>net.sourceforge.ondex.modules</groupId>
	<artifactId>rdf2oxl</artifactId>

	<name>ONDEX RDF-to-OXL Converter</name>
	<description></description>

	<developers>
		<developer>
			<name>Marco Brandizi</name>
			<url>https://github.com/marco-brandizi</url>
		</developer>
	</developers>


	<dependencies>

 		<dependency>
			<groupId>${project.groupId}</groupId>
 			<artifactId>rdf-common</artifactId>
		  <version>${project.version}</version>
 		</dependency>

    <dependency>
      <groupId>uk.ac.ebi</groupId>
      <artifactId>jutils-io</artifactId>
    </dependency>

    <dependency>
      <groupId>info.marcobrandizi</groupId>
      <artifactId>rdfutils-jena</artifactId>
      <version>2.0.1-SNAPSHOT</version>
    </dependency>
    
		<dependency>
			<groupId>org.freemarker</groupId>
			<artifactId>freemarker</artifactId>
			<version>2.3.28</version>
		</dependency>
    
	</dependencies>

	<build>

		<plugins>
		
			<!-- We have some test files that we reuse in the mini-integration-tests -->				      
			<!--plugin>
			  <groupId>org.apache.maven.plugins</groupId>
			  <artifactId>maven-jar-plugin</artifactId>
			  <executions>
			    <execution>
			      <goals>
			        <goal>test-jar</goal>
			      </goals>
			    </execution>
			  </executions>
			</plugin -->
		
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.20</version>
				<configuration>
					<properties>
						<property>
							<!-- Prints out spaces and test name before/after every test method and automatically -->
							<name>listener</name>
							<value>uk.ac.ebi.utils.test.junit.TestOutputDecorator</value>
						</property>
					</properties>
					<forkMode>always</forkMode>
					<forkCount>1</forkCount>
					<!-- We use this with certain demanding tests (eg, WholeGoLoadingTest) -->
					<forkedProcessTimeoutInSeconds>1800</forkedProcessTimeoutInSeconds>
					<argLine>-Xms2G -Xmx12G -Dondex.dir=/tmp</argLine>
				</configuration>
			</plugin>


			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven.assembly.plugin.version}</version>
				<executions>
					<!-- This comes from the parent and it's replaced with the assembly-bundle execution -->
					<execution>
						<id>make-assembly-packaged_with_jars</id>
						<phase />
					</execution>

					<execution>
						<id>assembly-bundle</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/bundle.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>

		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<excludes><exclude>test_config.xml</exclude></excludes>
				<includes><include>**/*</include></includes>
				<filtering>false</filtering>
			</testResource>
			<testResource>
				<directory>src/test/resources</directory>
				<includes><include>test_config.xml</include></includes>
				<filtering>true</filtering>
			</testResource>
		</testResources>
	</build>

	<repositories>

		<!-- TODO: Move upstream? -->

		<!-- rdfutils -->
		<repository>
			<id>marcobrandizi.info</id>
			<url>http://www.marcobrandizi.info:8081/artifactory/maven</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>

		<!-- jutils, java2rdf -->
		<repository>
			<id>EBIBioSamples-GH-repo</id>
			<url>https://raw.githubusercontent.com/EBIBioSamples/EBIBioSamples.github.io/maven-repo</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>

	</repositories>

	<pluginRepositories>
	</pluginRepositories>

</project>
