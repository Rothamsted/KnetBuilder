            <version>${maven.assembly.plugin.version}</version>
            <executions>
               <execution>
                  <id>make-assembly-packaged_with_jars</id>
                  <phase>package</phase>
                  <goals>
                     <goal>attached</goal>
                  </goals>
                  <configuration>
                     <descriptors>
                     <!-- This adds up to the ones coming from workflow-component-descriptor and overrides 
              			 the execution/descriptor with the same name. 
              			 
              			 TODO: Not sure it's needed here
              			 -->
                     <descriptor>src/main/assembly/packaged_with_jars.xml</descriptor>
                     </descriptors>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>

   </build>

</project>
