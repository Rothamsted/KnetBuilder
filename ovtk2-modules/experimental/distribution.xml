<assembly>
  <id>distribution</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/config</directory>
      <includes>
        <include>*.xml</include>
      </includes>
      <outputDirectory>config</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>