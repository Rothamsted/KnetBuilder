<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>packaged-distro</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
        <dependencySet>
            <outputDirectory>${artifactId}-${artifact.baseVersion}/lib</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <scope>runtime</scope>
        </dependencySet>
		<dependencySet>
			<outputDirectory>${artifactId}-${artifact.baseVersion}/plugins</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<scope>test</scope>
			<includes>
				<include>net.sourceforge.ondex.modules:*:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${artifactId}-${artifact.baseVersion}</outputDirectory>
			<scope>runtime</scope>			
			<includes>
				<include>net.sourceforge.ondex:datadir:*</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/data</directory>
			<outputDirectory>${artifactId}-${artifact.baseVersion}/data</outputDirectory>
			<includes>
				<include>**/*.*</include>
				<include>**/*</include>
			</includes>
			<excludes>
   		 		<exclude>dbs/**</exclude>
   				<exclude>seqs/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${basedir}</directory>
			<outputDirectory>${artifactId}-${artifact.baseVersion}</outputDirectory>
			<includes>
				<include>changes.txt</include>
				<include>LICENSE*.*</include>
				<include>README*.*</include>
			</includes>
			<fileMode>644</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>${artifactId}-${artifact.baseVersion}</outputDirectory>
			<includes>
				<include>runme*.*</include>
			</includes>
			<fileMode>755</fileMode>
			<filtered>true</filtered>			
		</fileSet>
	</fileSets>
</assembly>